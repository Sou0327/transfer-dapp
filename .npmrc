# Vercelデプロイ用設定
# プラットフォーム固有バイナリの問題を回避
target_platform=linux
target_arch=x64
target_libc=glibc

# オプション依存関係のインストールを強制しない
optional=false
optionalDependencies=false

# パッケージ配布でエラーが発生してもデプロイを続行
ignore-scripts=false

# プラットフォーム固有のバイナリをスキップ
no-optional=true

# Rollup プラットフォーム固有バイナリを無視
ignore-platform-reqs=true