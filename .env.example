# ERC-20 Transfer dApp 環境変数設定

# アプリケーション基本設定
VITE_APP_NAME="ERC-20 Transfer dApp"
VITE_APP_VERSION="1.0.0"

# ネットワーク設定（デフォルト: Ethereum Mainnet）
VITE_CHAIN_ID=1

# トークンアドレス（デフォルト: サンプルアドレス）
# 実際のトークンアドレスに変更してください
VITE_TOKEN_ADDRESS="0xA0b86a33E6441c8cD8A7ac8e6A5E8A6C8A6C8A6C"

# Infura/Alchemy などのRPC URL（オプション）
# VITE_RPC_URL_MAINNET="https://mainnet.infura.io/v3/YOUR_PROJECT_ID"
# VITE_RPC_URL_GOERLI="https://goerli.infura.io/v3/YOUR_PROJECT_ID"
# VITE_RPC_URL_SEPOLIA="https://sepolia.infura.io/v3/YOUR_PROJECT_ID"

# デバッグ設定
VITE_DEBUG=false

# ビルド設定
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_ANALYZE=false

# セキュリティ設定
VITE_ENABLE_HTTPS=false

# テスト設定
VITE_TEST_MODE=false
VITE_TEST_TOKEN_ADDRESS="0x1234567890123456789012345678901234567890"

# パフォーマンス設定
VITE_ENABLE_PWA=false
VITE_ENABLE_SERVICE_WORKER=false

# 機能フラグ
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# ======================================================
# 使用方法:
# 1. このファイルを .env にコピー
# 2. 必要な値を設定
# 3. 実際のトークンアドレスを VITE_TOKEN_ADDRESS に設定
# 4. 必要に応じてRPC URLを設定
# ======================================================