# Cardano Network Configuration
CARDANO_NETWORK=mainnet
BLOCKFROST_API_KEY=mainnet_your_api_key_here
ESCROW_ADDRESS=addr1qx_your_escrow_address_here

# WebSocket Configuration
WS_ORIGIN=https://admin.example.com

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/otc_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your_jwt_secret_key_here
ADMIN_PASSWORD_HASH=$2b$10$your_bcrypt_hash_here

# Server Configuration
PORT=4000
NODE_ENV=development
SUBMIT_BACKEND=blockfrost

# Optional: Self-hosted Cardano Node
CARDANO_NODE_URL=http://localhost:3001
CARDANO_NODE_SOCKET_PATH=/path/to/cardano-node/socket

# Rate Sources for rate_based mode
RATE_SOURCE_URL=https://api.coingecko.com/api/v3/simple/price?ids=cardano&vs_currencies=jpy