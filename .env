# Cardano Network Configuration
VITE_CARDANO_NETWORK=mainnet

# Blockfrost API Configuration
# セキュリティ上の理由により、実際のAPIキーは環境変数または外部設定から読み込んでください
VITE_BLOCKFROST_API_KEY=__REPLACE_WITH_ACTUAL_API_KEY__
VITE_BLOCKFROST_URL=https://cardano-mainnet.blockfrost.io/api/v0

# OTC Escrow Configuration (placeholder - will be provided by user)
# 実際のアドレスは運用時に設定してください
VITE_ESCROW_ADDRESS=__REPLACE_WITH_ACTUAL_ESCROW_ADDRESS__

# Database Configuration (Backend)
# セキュリティ上の理由により、実際の認証情報は環境変数から読み込んでください
DATABASE_URL=__REPLACE_WITH_ACTUAL_DATABASE_URL__

# Transaction Submission Configuration
VITE_SUBMIT_BACKEND=wallet

# Security Configuration
VITE_MAX_TTL_MINUTES=2160
VITE_MIN_TTL_MINUTES=5

# Development Configuration
VITE_ENABLE_DEBUG=false
VITE_MOCK_WALLET=false

# Server Configuration  
PORT=3001
HOST=localhost
# セキュリティ上重要：本番環境では強力なランダムキーを使用してください
JWT_SECRET=__REPLACE_WITH_SECURE_RANDOM_JWT_SECRET__
CORS_ORIGIN=http://localhost:4000

# Frontend Configuration
PUBLIC_BASE_URL=http://localhost:4000

# Backend Blockfrost API Configuration (for server-side API calls)
BLOCKFROST_API_KEY=__REPLACE_WITH_ACTUAL_API_KEY__
CARDANO_NETWORK=mainnet

# WebSocket Configuration
WEBSOCKET_URL=http://localhost:3001
