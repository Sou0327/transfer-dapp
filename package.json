{
  "name": "cardano-yoroi-otc-dapp",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A secure Cardano OTC transaction dApp with pre-signing and sharing capabilities",
  "keywords": [
    "cardano",
    "yoroi",
    "otc",
    "dapp",
    "react",
    "typescript",
    "blockchain"
  ],
  "author": "Cardano OTC dApp Team",
  "scripts": {
    "dev": "vite --port 4000",
    "build": "yarn typecheck && vite build",
    "build:analyze": "VITE_BUILD_ANALYZE=true yarn build",
    "build:sourcemap": "VITE_BUILD_SOURCEMAP=true yarn build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite",
    "start": "yarn dev",
    "db:migrate": "node database/migrate.cjs",
    "db:reset": "yarn db:migrate",
    "server": "node server/app.cjs",
    "server:dev": "nodemon server/app.cjs",
    "backend": "yarn docker:up && sleep 5 && node server/app.cjs",
    "backend:prod": "yarn docker:up && sleep 5 && yarn db:migrate && node server/app.cjs",
    "local:full": "docker-compose up --build",
    "local:dev": "yarn docker:up && sleep 5 && concurrently \"yarn server:dev\" \"yarn dev\"",
    "vercel:build": "yarn build",
    "vercel:dev": "vercel dev",
    "production:docker": "yarn docker:up --build",
    "production:local": "yarn docker:up && sleep 5 && yarn db:migrate && yarn local:dev",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@emurgo/cardano-serialization-lib-browser": "^12.0.1",
    "@emurgo/cardano-serialization-lib-nodejs": "^12.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/socket.io": "^3.0.1",
    "@types/uuid": "^10.0.0",
    "@upstash/redis": "^1.28.4",
    "cbor": "^10.0.9",
    "dotenv": "^17.2.1",
    "immer": "^10.1.1",
    "qrcode": "^1.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.1",
    "uuid": "^11.1.0",
    "zod": "^3.24.1",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.11.10",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/ws": "^8.5.13",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "buffer": "^6.0.3",
    "concurrently": "^9.1.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.6",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^3.2.4",
    "bcrypt": "^6.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/redis": "^7.0.2",
    "@fastify/static": "^8.2.0",
    "fastify": "^5.4.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "redis": "^5.6.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "ws": "^8.18.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-darwin-x64": "^4.46.2",
    "@rollup/rollup-linux-x64-gnu": "^4.46.2",
    "@rollup/rollup-win32-x64-msvc": "^4.46.2"
  }
}
