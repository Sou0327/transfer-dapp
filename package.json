{
  "name": "erc20-transfer-dapp",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A secure ERC-20 token transfer dApp with non-standard token support",
  "keywords": [
    "ethereum",
    "erc20",
    "dapp",
    "react",
    "typescript",
    "web3"
  ],
  "author": "ERC-20 Transfer dApp Team",
  "scripts": {
    "dev": "vite --port 4000",
    "build": "tsc -b && vite build",
    "build:analyze": "VITE_BUILD_ANALYZE=true npm run build",
    "build:sourcemap": "VITE_BUILD_SOURCEMAP=true npm run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite",
    "start": "npm run dev"
  },
  "dependencies": {
    "ethers": "^6.15.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tronweb": "^6.0.3",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@rollup/rollup-darwin-x64": "^4.45.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.15",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  }
}
