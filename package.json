{
  "name": "cardano-yoroi-otc-dapp",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A secure Cardano OTC transaction dApp with pre-signing and sharing capabilities",
  "keywords": [
    "cardano",
    "yoroi",
    "otc",
    "dapp",
    "react",
    "typescript",
    "blockchain"
  ],
  "author": "Cardano OTC dApp Team",
  "scripts": {
    "dev": "vite --port 4000",
    "build": "tsc -b && vite build",
    "build:analyze": "VITE_BUILD_ANALYZE=true npm run build",
    "build:sourcemap": "VITE_BUILD_SOURCEMAP=true npm run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite",
    "start": "npm run dev",
    "db:migrate": "node database/migrate.js",
    "db:reset": "npm run db:migrate",
    "server": "node server/index.js",
    "server:dev": "nodemon server/index.js"
  },
  "dependencies": {
    "@emurgo/cardano-serialization-lib-browser": "^12.0.1",
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/redis": "^7.0.2",
    "@fastify/static": "^8.2.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/socket.io": "^3.0.1",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "fastify": "^5.4.0",
    "immer": "^10.1.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "qrcode": "^1.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.1",
    "redis": "^5.6.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^11.1.0",
    "zod": "^3.24.1",
    "zustand": "^5.0.6"
  },
  "overrides": {
    "@rollup/rollup-darwin-x64": "@rollup/rollup-linux-x64-gnu",
    "@rollup/rollup-darwin-arm64": "@rollup/rollup-linux-x64-gnu"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/express": "^4.17.21",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.11.10",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "buffer": "^6.0.3",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^5.4.10",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "@rollup/rollup-darwin-x64": "^4.29.1"
  }
}
